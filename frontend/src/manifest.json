{
  "manifest_version": 3,
  "name": "TOS TLDR",
  "version": "1.0.0",
  "description": "Making the internet a more fair and equitable place for everyone.",
  "icons": {
    "64": "src/img/icon-64.png",
    "128": "src/img/icon-128.png"
  },
  "browser_action": {
    "default_icon": "src/img/icon-32.png",
    "default_popup": "src/html/popup.html"
  },
  "permissions": ["activeTab", "tabs"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "*://github.com/parcel-bundler/*"],
      "ts": ["src/ts/main.ts"]
    }
  ]
}
