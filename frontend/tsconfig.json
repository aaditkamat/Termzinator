{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "frontend/dist"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/ts/contentScript.js", "src/ts/popup.js", "src/ts/background.js"]
}
